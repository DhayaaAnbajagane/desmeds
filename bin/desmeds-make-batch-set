#!/usr/bin/env python
"""
    %prog [options] medsconf coadd_run band

Generate the inputs and batch scripts for the specified coadd run and band
"""
from __future__ import print_function
import sys
import os
import desmeds

from argparse import ArgumentParser
parser=ArgumentParser()

parser.add_argument('medsconf',help='DES MEDS configuration identifier')
parser.add_argument('tileset',help='DES tilename')

parser.add_argument('--system', default="lsf",
                    help="batch system")

parser.add_argument('--extra',
                    help="extra commands for wq scripts")
parser.add_argument('--missing',
                    action='store_true',
                    help="only write scripts for missing files")


def main():
    args=parser.parse_args()

    tileset=desmeds.files.read_tileset(args.tileset)

    ntile=len(tileset['tilenames'])

    for i,tilename in enumerate(tileset['tilenames']):
        print("%s %d/%d" % (tilename,i+1,ntile))
        for band in tileset['bands']:
            generator = desmeds.batch.Generator(
                args.medsconf,
                tilename,
                band,
                extra=args.extra,
                system=args.system,
                missing=args.missing,
            )
            generator.write()

main()

