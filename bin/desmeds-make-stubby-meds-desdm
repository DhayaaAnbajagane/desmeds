#!/usr/bin/env python
"""
    %prog [options] medsconf coadd_run band

Generate the stubby meds, which holds the input data for the MEDSMaker
"""
from __future__ import print_function
import sys
import os
import desmeds

from argparse import ArgumentParser
parser=ArgumentParser()

parser.add_argument('medsconf',help='DES MEDS configuration identifier')
parser.add_argument('fileconf',help='json file holding file information')


def main():
    args=parser.parse_args()

    maker = desmeds.DESMEDSMakerDESDM(
        args.medsconf,
        args.fileconf,
        do_inputs=True,
        do_meds=False,
    )
    maker.go()

main()

